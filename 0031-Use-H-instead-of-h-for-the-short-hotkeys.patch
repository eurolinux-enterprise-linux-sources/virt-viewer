           N_("Open in full screen mode"), NULL },
-        { "hotkeys", 'h', 0, G_OPTION_ARG_STRING, &hotkeys,
+        { "hotkeys", 'H', 0, G_OPTION_ARG_STRING, &hotkeys,
           N_("Customise hotkeys"), NULL },
         { G_OPTION_REMAINING, '\0', 0, G_OPTION_ARG_STRING_ARRAY, &args,
           NULL, "-- DOMAIN-NAME|ID|UUID" },
